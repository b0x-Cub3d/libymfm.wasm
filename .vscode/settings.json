{
    "files.associations": {
        "*.fs": "glsl",
        "cstdio": "cpp",
        "*.ipp": "cpp",
        "*.tcc": "cpp"
    },
    "git.ignoreLimitWarning": true,
    "cmake.configureEnvironment": {
        "G": "Ninja",
        "CMAKE_C_COMPILER": "${env:WASI_SDK_PATH}/bin/clang",
        "CMAKE_CXX_COMPILER": "${env:WASI_SDK_PATH}/bin/clang",
        "CMAKE_SYSROOT": "${env:WASI_SDK_PATH}/share/wasi-sysroot/"
    }
}
